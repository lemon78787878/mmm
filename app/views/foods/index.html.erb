<div class='main'>

  <%# 在庫一覧 %>
  <div class='item-contents'>
    <h2 class='title'>在庫一覧</h2>
    <ul class='item-lists'>

      <%# 在庫の一覧詳細が表示される %>
      <% if @foods.present? %>
        <% @foods.each do |item| %>
          <li class='list'>
            <%= link_to '#' do %>
              <div class='item-img-content'>
                <%= image_tag '#', class: "item-img" %>


              </div>
              <div class='item-info'>
                <h3 class='item-name'>
                  <%= '#' %>
                </h3>
              </div>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <%# /在庫一覧 %>
</div>

<%= link_to('#', class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>出品する</span>
  <%= image_tag 'logo.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>

  <%= link_to new_food_path do %>
    <div class='item-name'>
      在庫登録
    </div>
    <div class='item-img'>
      <%= image_tag "kaden_reizouko.png" %>
    </div>
  <% end %>

  <div class="sell-btn-contents">
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>


