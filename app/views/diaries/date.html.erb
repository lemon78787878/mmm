<div class="diaries-sell-contents">
  <div class='diaries-show-main'>
    <h1 class='greeting'><%= @date %>の料理記録</h1>

    <% if @diaries.present? %>
      <% @diaries.each do |diary| %>
        <div class="diary_show">
          <p><%= diary.dish %></p>
        </div>
      <% end %>
    <% else %>
      <p>この日に記録された料理はありません。</p>
    <% end %>

    <%= link_to '編集', edit_diaries_by_date_path(date: @date), class: 'edit-button' %>
    <%= link_to '戻る', diaries_path, class: 'back-button' %>
  </div>
</div>