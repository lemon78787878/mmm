<div class="diaries-sell-contents">
  <div class='diaries-show-main'>
    <h1 class='greeting'><%= @date %>の料理記録編集</h1>

    <%= form_with model: @diary, local: true do |f| %>
      <div class="diary">
        <div class="item-img-content">
          <%= f.label :image %>
          <%= f.file_field :image , class:"items-text"%>
        </div>
        <div>
          料理名
          <%= f.text_area :dish, class:"items-text", id:"item-name" %>
        </div>
        <div>
          日付
          <%= f.date_select :diary_day, class:"items-text", id:"item-name" %>
        </div>
      </div>
      <%= f.submit "更新する", class: "submit-button" %>
    <% end %>

    <%= link_to '戻る', by_date_diaries_path(date: @date), class: 'back-button' %>
  </div>
</div>